<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="calendarEvent"
            type="com.ranseo.valendar.data.model.ui.CalendarEventUIState" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.CalendarEventFragment"
        android:theme="@style/Theme.Calendar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="캘린더 ID : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/shadow_grey" />

            <TextView
                android:text="@{Long.toString(calendarEvent.calId)}"
                tools:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="이벤트 ID : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@color/shadow_grey" />

            <TextView
                android:text="@{Long.toString(calendarEvent.eventId)}"
                tools:text="124"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <include
            layout="@layout/layout_calendar_event_update"
            bind:col="@{calendarEvent.title}"
            />

        <include
            layout="@layout/layout_calendar_event_update"
            bind:col="@{calendarEvent.baseTime}"
            />
        <include
            layout="@layout/layout_calendar_event_update"
            bind:col="@{Long.toString(calendarEvent.dTStart)}"/>
        <include
            layout="@layout/layout_calendar_event_update"
            bind:col="@{Long.toString(calendarEvent.dTEnd)}"
            />
        <include
            layout="@layout/layout_calendar_event_update"
            bind:col="@{calendarEvent.description}"
            />

    </LinearLayout>
</layout>