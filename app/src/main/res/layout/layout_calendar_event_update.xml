<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="row"
            type="String" />

        <variable
            name="col"
            type="String" />

        <variable
            name="tag"
            type="com.ranseo.valendar.ui.fragment.UpdateTag" />
        <variable
            name="viewModel"
            type="com.ranseo.valendar.ui.fragment.CalendarEventViewModel"
            />

        <import type="android.text.TextWatcher"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:theme="@style/Theme.Calendar">

        <TextView
            android:text="@{row}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/grey" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            tools:hint="Enter Text"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:text="@{col}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onTextChanged="@{(text,start,before,count)->viewModel.onTextChanged(text,start,before,count,tag)}"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</layout>